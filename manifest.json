{
    "manifest_version": 2,
    "name": "ReWordify",
    "version": "1.0",

    "description": "Rewordify will help you with your word dilemmas",

    "browser_action": {
	"default_popup": "popup.html",
	"default_title": "ReWordify",	
	"default_icon": "icon.png"
    },

    "background": {
	"scripts": ["eventPage.js"],
	"persistent": false
    },

    "icons": {
	"16": "icon.png",
	"128": "icon.png"
    },

    "content_scripts": [
	{
	    "matches":["<all_urls>"],
	    "js":["jquery.js","content.js"]
	}
    ],
    
    "permissions": [
	"contextMenus",
	"activeTab"
    ],

    "content_scripts": [
        {
            "matches":["<all_urls>"],
            "js":["jquery.js","content.js"]
        }
    ],

    "web_accessible_resources": [
	"data.json"
    ]
}
